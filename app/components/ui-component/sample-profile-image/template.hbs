    {{profile-image size="medium" shape="square" badgeCount=18 imageSrc='/img/profiles/emmet.jpg'}}
    {{profile-image size="large" shape="square" badgeCount=18 imageSrc='/img/profiles/emmet.jpg'}}
    {{profile-image size="xlarge" shape="square" badgeCount=18 imageSrc='/img/profiles/emmet.jpg'}}
        <br>
    {{profile-image size="small" shape="circle" badgeCount=18 imageSrc='/img/profiles/emmet.jpg'}}
    {{profile-image size="medium" shape="circle" badgeCount=18 imageSrc='/img/profiles/emmet.jpg'}}
    {{profile-image size="large" shape="circle" badgeCount=18 imageSrc='/img/profiles/emmet.jpg'}}
    {{profile-image size="xlarge" shape="circle" badgeCount=18 imageSrc='/img/profiles/emmet.jpg'}}
